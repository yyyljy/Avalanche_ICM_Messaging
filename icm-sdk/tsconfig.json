{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@avalanche-sdk/interchain": [
        "../icm-sdk/node_modules/@avalanche-sdk/interchain/src/index.ts"
      ],
      "@avalanche-sdk/interchain/*": [
        "../icm-sdk/node_modules/@avalanche-sdk/interchain/src/*"
      ]
    }
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}

